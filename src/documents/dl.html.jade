          mixin faq_item(id, title)
            .panel.panel-default
              .panel-heading
                h4.panel-title
                  a(data-toggle='collapse', data-parent='#faq_accordion', href='#faq_collapse#{id}') #{title}

              div(id='faq_collapse#{id}').panel-collapse.collapse
                .panel-body
                  if block
                    block
                  else
